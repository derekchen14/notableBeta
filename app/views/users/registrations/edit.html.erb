<%= render 'scaffold/header_in' %>
<div class="container" id="static">
	<h2>Account Settings</h2>

	<h4><u>Customization Options</u></h4>

	<ul class="options">
		<li><input class="shortcut option" type="checkbox">
		Show help for keyboard shortcuts at the bottom of the page
		<% if current_user.sign_in_count < 3 %>
			<span class="shortcut-hack">
			<span class="glyphicon glyphicon-arrow-left"></span>
			<i>Are you looking for this?</i></span></li>
		<% end %>
		<li><input class="theme option" type="checkbox">
		Show the dark theme for Notable (coming soon)</li>
		<li><input class="laytech option" type="checkbox">
		Show math equation and symbol toolbar (coming soon)</li>
	</ul>

	<input class="btn btn-submit save-changes" type="submit" value="Save Changes">

<div id="user-form" class="update-info">
	<h4><u>Update User Info</u></h4>

	<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { :method => :put }) do |f| %>
		<%= devise_error_messages! %>
			<%= f.email_field :email, autofocus: false %>
			<!-- "New password" is the label for the input box and
			"password" is the key used to access the value in the params hash -->
			<%= f.password_field :password, autocomplete: "off", label: "New password", help: "Leave blank if you don't want to change it." %>
			<%= f.password_field :password_confirmation %>
			<%= f.password_field :current_password %>
		<%= f.submit "Update Profile", class: "btn btn-submit" %>
	<% end %>
</div>

	<h4><u>Cancel my account</u></h4>
	<p class='cancel-text'>Not satisfied with your free account? Please consider giving us feedback at hello@getnotable.com instead!
	 <%= button_to "Cancel my account", user_registration_path(:id => current_user.id), data: { confirm: "Are you sure? All your notes will be destroyed and there is currrently no way to restore the data." }, method: :delete, class: "btn btn-default btn-sm" %></p>
</div>
<%= render 'scaffold/footer_in' %>