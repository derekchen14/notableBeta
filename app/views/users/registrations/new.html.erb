<%= render 'scaffold/header_in' %>
<div class="container" id="user-form">
	<%= render 'layouts/flash_msg' %>

	<h2>Create an Account</h2>

	<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <%= f.email_field :email, autofocus: true, value: params[:email] %>
	  <%= f.password_field :password %>
	  <%= f.password_field :password_confirmation %>

	  <%= f.submit "Sign up", class: "btn btn-submit" %>
	<% end %>

  Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %>
</div>